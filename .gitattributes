# Root .gitattributes for monorepo
# Auto detect text files and normalize to LF
* text=auto eol=lf

# Source files
*.js text eol=lf
*.ts text eol=lf
*.java text eol=lf
*.kt text eol=lf
*.kts text eol=lf
*.sol text eol=lf

# Configuration files
*.json text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.xml text eol=lf
*.toml text eol=lf
*.gradle text eol=lf
*.properties text eol=lf
*.lock text eol=lf
.gitignore text eol=lf
.gitattributes text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf

# Shell scripts
gradlew text eol=lf
*.sh text eol=lf

# Windows scripts
gradlew.bat text eol=crlf
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Binary files
*.jar binary
*.class binary
*.dex binary
*.ap_ binary
*.apk binary
*.aab binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.webp binary
*.ico binary
*.pdf binary
*.so binary
*.zip binary
